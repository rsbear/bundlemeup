{
  "name": "@habitat/bundleup",
  "version": "0.2.23",
  "license": "MIT",
  "description": "A CLI that wraps esbuild to build frontend framework based projects",
  "exports": {
    ".": "./src/cli.ts",
    "./lib": "./src/mod.ts"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A src/cli.ts dev",
    "bundlemeup": "deno run -A src/cli.ts",
    "test": "deno test -A tests/deno.test.ts",
    "test:all": "deno run -A tests/all.test.ts",
    "test:bun": "bun test tests/bun.test.ts",
    "build:npm": "deno run -A build_npm.ts"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@deno/esbuild-plugin": "jsr:@deno/esbuild-plugin@^1.2.0",
    "@deno/loader": "jsr:@deno/loader@^0.3.9",
    "@ryanto/esbuild-plugin-tailwind": "npm:@ryanto/esbuild-plugin-tailwind@^0.0.3",
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.23",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.0.6",
    "@std/http": "jsr:@std/http@^1.0.21",
    "esbuild": "npm:esbuild@^0.25.12",
    "esbuild-svelte": "npm:esbuild-svelte@^0.9.3",
    "svelte": "npm:svelte@^5.43.6",
    "svelte2tsx": "npm:svelte2tsx@^0.7.45",
    "tailwindcss": "npm:tailwindcss@^4.1.17",
    "typescript": "npm:typescript@^5.9.3"
  },
  "compilerOptions": {
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "lineWidth": 100
  },
  "publish": {
    "include": ["LICENSE", "README.md", "src", "deno.json"],
    "exclude": ["examples", ".github", "src/vite-configs"]
  }
}
